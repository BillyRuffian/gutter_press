- content_for :title, "Menu Item Details"

.row
  .col-md-8
    .card
      .card-header
        %h3= @menu_item.page.title
        .badge.badge-secondary{class: @menu_item.enabled? ? 'bg-success' : 'bg-secondary'}
          = @menu_item.enabled? ? 'Enabled' : 'Disabled'
      
      .card-body
        %dl.row
          %dt.col-sm-3 Page Title:
          %dd.col-sm-9= @menu_item.page.title
          
          %dt.col-sm-3 Page URL:
          %dd.col-sm-9
            = link_to @menu_item.url, @menu_item.url, target: '_blank'
            
          %dt.col-sm-3 Position:
          %dd.col-sm-9= @menu_item.position
          
          %dt.col-sm-3 Status:
          %dd.col-sm-9
            - if @menu_item.enabled?
              %span.badge.bg-success Enabled
            - else
              %span.badge.bg-secondary Disabled

        .mt-3
          = link_to 'Edit', edit_manage_menu_item_path(@menu_item), class: 'btn btn-primary'
          = link_to 'Back to Menu', manage_menu_items_path, class: 'btn btn-secondary'