- content_for :title, @post.title

.row
  .col-lg-8.mx-auto
    = render @post
    
    - if Current.user && Current.user == @post.user
      %hr.my-4
      .d-flex.gap-2.flex-wrap
        = link_to edit_manage_post_path(@post), class: 'btn btn-outline-secondary' do
          %i.bi.bi-pencil.me-2
          Edit Post
        = button_to [:manage, @post], method: :delete, 
            class: 'btn btn-outline-danger',
            data: { turbo_confirm: 'Are you sure you want to delete this post?' },
            form: { class: 'd-inline' } do
          %i.bi.bi-trash.me-2
          Delete Post
    
    %hr.my-4
    .text-center
      = link_to manage_posts_path(@back_to_posts_page ? { page: @back_to_posts_page } : {}), class: 'btn btn-primary' do
        %i.bi.bi-arrow-left.me-2
        Back to Posts
