- # Using dom_id helper which is safe for HTML attributes
%article{id: dom_id(post), class: 'post'}
  %header.mb-4
    %h1.display-6.fw-bold.mb-3= post.title
    - if post.excerpt.present?
      .alert.alert-info.mb-3
        %strong Excerpt:
        = post.excerpt
    .post-meta.text-muted.border-bottom.pb-3.mb-4
      = post.published_at.to_fs(:concise)

  .post-content.lh-lg.lexxy-content{"data-controller" => "syntax-highlight"}
    = post.content
