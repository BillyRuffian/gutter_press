- content_for :title, 'Posts'

- content_for(:hero_section) do
  - if SiteSetting.hero_enabled? && SiteSetting.has_hero_image? && SiteSetting.hero_image_hero
    .hero-section.position-relative{"data-controller": "parallax"}
      .hero-image
        = image_tag SiteSetting.hero_image_hero, class: "w-100 hero-bg", alt: SiteSetting.hero_title, "data-parallax-target": "image"
      .hero-overlay.position-absolute.top-0.start-0.w-100.h-100.d-flex.align-items-center
        .container-fluid.px-4
          .row
            .col-lg-8.mx-auto.text-center
              %h1.display-3.fw-bold.text-white.hero-title.mb-4= SiteSetting.hero_title
              - if SiteSetting.hero_subtitle.present?
                %p.lead.text-white.hero-subtitle.mb-0= SiteSetting.hero_subtitle
      - if SiteSetting.hero_image_attribution.present?
        .attribution.position-absolute.bottom-0.end-0.m-3.px-2.py-1.bg-dark.bg-opacity-75.text-white.small.rounded
          = sanitize SiteSetting.hero_image_attribution, tags: %w[a], attributes: %w[href target]

.container-fluid.px-0
  .row
    .col-lg-8.mx-auto.px-4
      - unless SiteSetting.hero_enabled? && SiteSetting.has_hero_image?
        .d-flex.justify-content-between.align-items-center.mb-4.mt-4
          %h1.display-5.fw-bold Latest
      - else
        .d-flex.justify-content-between.align-items-center.mb-4.mt-5
          %h2.h3.fw-bold Latest

      - if @posts.any?
        .posts
          - @posts.each_with_index do |post, index|
            %article.py-4{class: (index > 0 ? 'border-top' : '')}
              .row.position-relative
                - if post.has_cover_image?
                  .col-md-4.mb-3.mb-md-0
                    = link_to post, class: 'stretched-link' do
                      = image_tag post.cover_image_thumbnail, class: "img-fluid rounded", alt: post.title
                  .col-md-8
                    %h2.h4.mb-3
                      = link_to post.title, post, class: 'text-decoration-none text-dark stretched-link'
                    %p.mb-3.lexxy-content{"data-controller" => "syntax-highlight"}
                      = post.display_excerpt
                    .text-muted.small.mb-3
                      = post.published_at.to_fs(:concise)
                - else
                  .col-12
                    %h2.h4.mb-3
                      = link_to post.title, post, class: 'text-decoration-none text-dark stretched-link'
                    %p.mb-3.lexxy-content{"data-controller" => "syntax-highlight"}
                      = post.display_excerpt
                    .text-muted.small.mb-3
                      = post.published_at.to_fs(:concise)
        
        - if @pagy.pages > 1
          .d-flex.justify-content-center.mt-5
            = raw pagy_bootstrap_nav(@pagy)
      - else
        .text-center.py-5
          %i.bi.bi-journal-text.display-1.text-muted.mb-3
          %h3.text-muted No posts yet
          %p.text-muted Start writing your first blog post!
          - if Current.user
            = link_to 'Create your first post', new_manage_post_path, class: 'btn btn-primary'
